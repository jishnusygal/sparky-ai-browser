{
  "manifest_version": 3,
  "name": "Sparky - Agentic AI Browser",
  "version": "1.1.0",
  "description": "üêï An intelligent browser agent that autonomously navigates the web to accomplish your goals",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "sidePanel",
    "identity"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://www.googleapis.com/*",
    "https://accounts.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "side_panel.html"
  },
  "content_scripts": [],
  "action": {
    "default_title": "Open Sparky AI Browser"
  },
  "oauth2": {
    "client_id": "YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.profile",
      "https://www.googleapis.com/auth/userinfo.email"
    ]
  },
  "icons": {
    "16": "data:image/svg+xml;base64,",
    "32": "data:image/svg+xml;base64,",
    "48": "data:image/svg+xml;base64,",
    "128": "data:image/svg+xml;base64,"
  }
}